# Example Terraform variables file for production environment
# Usage: terraform apply -var-file="environments/prod.tfvars"

github_owner       = "your-github-org-or-username"
github_repository  = "devops-engineer-profile"
github_token       = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Use environment variable or secrets manager in CI/CD

aws_region         = "ap-southeast-1"
aws_account_id     = "aws-account-id"
aws_role_name      = "github-actions-s3-sync-role"
s3_bucket_name     = "your-prod-s3-bucket-name"

environment        = "production"
project_name       = "devops-engineer-profile"

# OIDC Authentication (Recommended - do not provide access keys)
enable_oidc_authentication = true

# Fallback authentication (only use if OIDC is not available)
# aws_access_key_id     = ""  # Use environment variable
# aws_secret_access_key = ""  # Use environment variable

# Additional tags for resource identification
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Compliance  = "SOC2"
}
