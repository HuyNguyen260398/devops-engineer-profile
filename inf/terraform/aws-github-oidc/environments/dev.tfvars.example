# Example Terraform variables file for development/testing environment
# Usage: terraform plan -var-file="environments/dev.tfvars"
#        terraform apply -var-file="environments/dev.tfvars"

github_owner       = "your-github-org-or-username"
github_repository  = "devops-engineer-profile"
github_token       = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Use TF_VAR_github_token environment variable

aws_region         = "us-east-1"
aws_role_name      = "github-actions-s3-sync-role-dev"
s3_bucket_name     = "your-dev-s3-bucket-name"

environment        = "development"
project_name       = "devops-engineer-profile"

# OIDC Authentication (Recommended)
enable_oidc_authentication = true

# Fallback authentication (only use if OIDC is not available)
# aws_access_key_id     = ""  # Use TF_VAR_aws_access_key_id environment variable
# aws_secret_access_key = ""  # Use TF_VAR_aws_secret_access_key environment variable

# Additional tags for resource identification
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Compliance  = "SOC2"
}
